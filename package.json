{
  "name": "yzsocialc",
  "version": "1.0.0",
  "description": "Browser-based DHT using Kademlia with WebRTC and minimal server dependency",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "webpack serve --config webpack.config.cjs --mode development --open",
    "build": "webpack --config webpack.config.cjs --mode production",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:network": "node test/local/dht-network-test.js",
    "test:concept": "node test/local/basic-dht-concept-test.js",
    "bootstrap": "node src/bootstrap/server.js",
    "bootstrap:genesis": "node src/bootstrap/server.js -createNewDHT",
    "bootstrap:bg": "node scripts/run-bg.js src/bootstrap/server.js",
    "bootstrap:genesis:bg": "node scripts/run-bg.js src/bootstrap/server.js -createNewDHT",
    "bootstrap:bg:win": "start /B node src/bootstrap/server.js",
    "bootstrap:genesis:bg:win": "start /B node src/bootstrap/server.js -createNewDHT",
    "bootstrap:bg:unix": "nohup node src/bootstrap/server.js &",
    "bootstrap:genesis:bg:unix": "nohup node src/bootstrap/server.js -createNewDHT &",
    "lint": "eslint src/**/*.js",
    "clean": "rm -rf dist node_modules",
    "shutdown": "node scripts/shutdown.js",
    "cleanup": "npm run shutdown",
    "kill-ports": "node scripts/kill-ports.js",
    "restart": "npm run shutdown && npm run bootstrap",
    "restart:genesis": "npm run shutdown && npm run bootstrap:genesis",
    "start-all": "node scripts/start-all.js",
    "nodejs-client": "node scripts/background-node.js",
    "nodejs-client:bg": "node scripts/run-bg.js scripts/background-node.js",
    "nodejs-client:bg:win": "start /B node scripts/background-node.js",
    "nodejs-client:bg:unix": "nohup node scripts/background-node.js &",
    "ps": "node scripts/pid-registry.js list",
    "ps:cleanup": "node scripts/pid-registry.js cleanup",
    "ps:kill-all": "node scripts/pid-registry.js kill-all"
  },
  "dependencies": {
    "@noble/ed25519": "^2.0.0",
    "crypto-js": "^4.2.0",
    "events": "^3.3.0",
    "werift": "^0.22.2"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.52.0",
    "express": "^4.18.2",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "url": "^0.11.3",
    "util": "^0.12.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2",
    "ws": "^8.14.2"
  },
  "keywords": [
    "dht",
    "kademlia",
    "webrtc",
    "p2p",
    "browser",
    "decentralized"
  ],
  "author": "YZSocialC Team",
  "license": "MIT"
}
